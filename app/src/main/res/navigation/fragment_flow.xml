<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_flow"
    app:startDestination="@id/mainFragment">


    <fragment
        android:id="@+id/mainFragment"
        android:name="com.jj.android.shoprecipemanagement.fragment.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_processingMaterialProcessFragment"
            app:destination="@id/processingMaterialProcessFragment" />
        <action
            android:id="@+id/action_mainFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/processingMaterialProcessFragment"
        android:name="com.jj.android.shoprecipemanagement.fragment.ProcessingMaterialProcessFragment"
        android:label="ProcessingMaterialProcessFragment"
        tools:layout="@layout/fragment_processing_material_process"/>

    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.jj.android.shoprecipemanagement.fragment.RecipeDetailFragment"
        android:label="RecipeDetailFragment"
        tools:layout="@layout/fragment_recipe_detail"/>


</navigation>